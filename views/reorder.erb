        <div class="order_button">
          <form method="get" action="/topics">
          <input type="hidden" name ="order" value="true"/>
          <input type="submit" value="order by time"/>
          </form>
        </div>


    <% @reorder_array.reverse.each do |x| %>
        <article class="full_post">
          <h2> <a href ="/topics/<%= x["slug"] %>"><%= x["topic"] %></a> </h2>
          <h3> <%= x["body"] %> </h3>
          <p class="signature"> posted by: <%= x["username"] %> </p>
          <p class="signature"> reply count: <%= x["messages"].size %> </p>
          <p class="signature"> vote count: <%= x["vote_count"] %> </p>
        </article>
        </br>
      <%end%>
